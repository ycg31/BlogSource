#page-nav
    margin: 40px auto
    text-align: center
    color: #999
    overflow: hidden

#page-nav:before,
#page-nav:after 
  content: ""
  display: table

#page-nav:after 
  clear: both

#page-nav a,
#page-nav span 
  height: 32px
  padding: 0 10px
  line-height: 32px
  text-align: center
  display: inline-block
  -webkit-border-radius: 2px
  border-radius: 2px

#page-nav a 
  color: #999
  text-decoration: none



#page-nav a:hover 
  color: #fff
  background: #a0ca9c

#page-nav .page-number 
  display: inline-block
  color: #abcca7

#page-nav .current
  display: inline-block
  color: #abcca7
  background: #f5f5f5
